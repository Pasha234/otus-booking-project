<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My CQRS App{% endblock %}</title>
    {# Link to your compiled CSS (contains Tailwind) #}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}
</head>
<body class="h-full font-sans text-gray-800 antialiased">
    <div class="min-h-full">
        <header class="bg-white shadow-sm">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between">
                    <div class="flex items-center">
                        <a href="{{ path('app_home') }}" class="flex-shrink-0 font-bold text-indigo-600 hover:text-indigo-800 transition">
                            BookingApp
                        </a>
                    </div>
                    <div class="flex items-center gap-4">
                        {% include 'partials/header.html.twig' %}
                        {% block header_actions %}{% endblock %}
                    </div>
                </div>
            </div>
        </header>

        <main class="py-10">
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
                {# Flash messages, styled with Tailwind #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="p-4 mb-6 rounded-md
                            {% if label == 'success' %}bg-green-100 text-green-800 border border-green-300
                            {% elseif label == 'error' %}bg-red-100 text-red-800 border border-red-300
                            {% else %}bg-blue-100 text-blue-800 border border-blue-300
                            {% endif %}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </main>
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>