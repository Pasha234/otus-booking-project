{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-blue-700 mb-6 text-center">Welcome, {{ user.fullName }}!</h1>

    <div class="bg-gray-50 p-6 rounded-lg shadow-inner mb-6">
        <p class="mb-2 text-lg"><strong class="font-semibold text-gray-800">Email:</strong> {{ user.email }}</p>
        <p class="mb-2 text-lg"><strong class="font-semibold text-gray-800">User ID:</strong> {{ user.id }}</p>
        {# You might add more details here, or links to edit profile, etc. #}
    </div>

    <div class="my-6">
        <a href="{{ path('app_profile_invitations') }}"
           class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">View Invitations</a>
    </div>

    <div class="flex justify-center mt-8">
        <a href="{{ path('app_logout') }}"
           class="inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Logout
        </a>
    </div>
{% endblock %}